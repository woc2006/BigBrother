<li id="rule-edit" style="display: none;">
    <%
        var isCombo = locals.type == 'Combo';
    %>
    <div>
        <label>Target:</label><input type="text" id="edit-source" value="<%=(locals.source || '')%>"placeholder="Target url"/><div id="edit-combo" class="checkbox<%=(isCombo ?' checkbox-on':'')%>"></div><span>It's combo url</span>
    </div>
    <div id="edit-combo-sub" class="edit-sub" style="display: <%=(isCombo? 'block':'none')%>">
        <label>Prefix:</label><input type="text" id="edit-prefix" value="<%=(locals.prefix || '')%>" placeholder="Mapping after..."/>
        <label>Separator:</label><input type="text" id="edit-separator" value="<%=(locals.separator || '')%>" placeholder="Split by..."/>
    </div>
    <div>
        <label>Replace:</label><input type="text" id="edit-dest" value="<%=(locals.dest || '')%>" placeholder="File, Folder or Host. Double click to select file."/>
    </div>
    <div class="edit-sub" style="display: none;">
        <div class="checkbox"></div><span>Add cross origin header</span>
    </div>
    <div class="edit-button">
        <img data-tool="ok" src="assets/img/ok.png"/><img data-tool="cancel" src="assets/img/cancel.png"/>
    </div>
</li>